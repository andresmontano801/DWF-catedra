<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="sv.edu.udb.www.catedra.ProductosEntity" table="productos" schema="snickersv">
        <id name="id">
            <column name="Id" sql-type="int(11)"/>
        </id>
        <property name="marca">
            <column name="Marca" sql-type="varchar(80)" length="80"/>
        </property>
        <property name="modelo">
            <column name="Modelo" sql-type="varchar(80)" length="80"/>
        </property>
        <property name="precio">
            <column name="Precio" sql-type="double" precision="-1"/>
        </property>
        <property name="talla">
            <column name="talla" sql-type="int(11)"/>
        </property>
        <property name="stock">
            <column name="stock" sql-type="int(11)"/>
        </property>
        <property name="color">
            <column name="color" sql-type="varchar(15)" length="15"/>
        </property>
    </class>
</hibernate-mapping>